<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FragmentTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E1FFFF"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huddle"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentDateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3FFFF7F7"
                android:text="MM DD, YYYY"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/statusAllBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:background="@drawable/header_button_shape"
                android:foreground="?attr/selectableItemBackground"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeStepGranularity="1sp"
                android:padding="10dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text="ALL" />

            <Button
                android:id="@+id/statusPendingBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:foreground="?attr/selectableItemBackground"
                android:autoSizeStepGranularity="1sp"
                android:background="@drawable/header_button_shape"
                android:textColor="#FFFFFF"
                android:text="PENDING" />

            <Button
                android:id="@+id/statusDoingBtn"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:padding="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:autoSizeStepGranularity="1sp"
                android:background="@drawable/header_button_shape"
                android:textColor="#FFFFFF"
                android:text="DOING" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A9A9A9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button8"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="Priority"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/prioAllBtn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#A278CC"
                android:foreground="?attr/selectableItemBackground"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="ALL"
                android:textSize="13sp" />

            <Button
                android:id="@+id/prioLowBtn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#7242A9FF"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="LOW"
                android:textSize="13sp" />

            <Button
                android:id="@+id/prioMidBtn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#58DCDE5E"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="MID"
                android:textSize="13sp" />

            <Button
                android:id="@+id/prioHighBtn"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:backgroundTint="#40BA2B2B"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:text="HIGH"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/task_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>