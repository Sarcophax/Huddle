<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:background="#40eaf0f0"
    android:orientation="vertical">
    <!--    android:background="#40eff0f5 "-->
    <!--    android:background="#40D8E7ED"-->
    <!--    android:background="#40AFDFE5"-->
    <!--    android:background="#401e1f22"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prioTxtView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/item_message_prio_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="Prio"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_message_mentor_shape"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="Mentor: "
                android:textColor="#8d8b8d"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mentorNameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mentor"
                android:textColor="#8d8b8d" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/statusColorView"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:background="@color/finish"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/detailsTxtView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Details"
            android:textColor="#a1a1aa"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/read_more_fragment_back_button_shape"
            android:textColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            android:text="Back To Board" />
    </LinearLayout>

</LinearLayout>